<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
       <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name%></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th></th>
      </tr>
    </tbody>
      </table>
      <div class="row">
        <%=link_to  edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block"%>
      </div>
    </div>
   </div>
    <h2 class="mt-3">New book</h2>
    <form action="/books" accept-charset="UTF-8" method="post">
      <div class="form-group">
        <label for="book_title">Title</label>
        <input class="form-control book_title" type="text" name="book[title]" id="book_title">
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-sucess" data-disable-with="Create Book">
      </div>
    </form>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>

  <% @books.each do |book| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to books_path(book.id) do %>
    <%=image_tag book.user.get_profile_image(100,100), class:"card-img-top"; %>
    <% end %>>
    <div class="card-body">
      <div class="row">
        <div class="col-2">

        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(book_path(book.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= book.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= book.caption %></p>
          <span><i class="fas fa-user"></i> By <%= book.user.name %> ｜ </span>
          <span><%= link_to "#{book.post_comments.count} コメント", book_path(book.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>