<h1><h1>Editing Book</h1></h1>
<p><%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show" ,book_path(@book.id) %>
<a class="back" href="/books">Back</a></p>
