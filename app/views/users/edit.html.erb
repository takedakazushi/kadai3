<p><%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
  <h4>Name</h4>
  <%= f.text_field :title %>
  <h4>Image</h4>
  <%= f.text_area :body %>
  <h4>Introduction</h4>
  <%= f.text_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.submit 'Update Book' %>
<% end %>