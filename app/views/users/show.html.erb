
  <%=image_tag @user.get_profile_image(100,100)%>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <% if @user == current_user %>
  <%= link_to "プロフィール編集", edit_user_path(@user.id) %>
  <% end %>

<% @books.each do |book| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to books_path(book.id) do %>
    <%=image_tag book.user.get_profile_image(100,100), class:"card-img-top"; %>
    <% end %>>
    <div class="card-body">
      <div class="row">
        <div class="col-2">

        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(book_path(book.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= book.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= book.caption %></p>
          <span><i class="fas fa-user"></i> By <%= book.user.name %> ｜ </span>
          <span><%= link_to "#{book.post_comments.count} コメント", book_path(book.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody></tbody>
</table>
